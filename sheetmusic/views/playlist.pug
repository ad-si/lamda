extends ../linked_modules/lamda-views/layout

block styles
  link(rel='stylesheet' href=`${baseURL}/styles/index.css`)

block content
  h2 Playlist #{playlist.name}

  table
    thead
      tr
        th Number
        th Name
    tbody
      each song, index in playlist.songs
        tr
          td= index + 1
          td: a(href=song.url)
            =song.id
