#events
	padding 1em 0 0 0

	ul
		font-size: 0.75em
		li
			display flex
			list-style none
			margin-bottom 2px

			div
				line-height 26px
				height 26px
				display inline-block

	.today .date
		background-color rgba(200,80,60, 0.2)

	.cursor
		background-color rgba(200,80,60, 0.5)
		position absolute
		display block
		width 2px

	.monday
		margin-top 0.8em

	.date
		background-color rgba(black, 0.2)
		padding 0 0 0 0.5em
		margin-right 2px
		flex-basis auto
		flex-grow 0
		span:last-of-type
			display inline-block
			width 1.2em
			padding-right 0.4em
			text-align right
			opacity 0.5

	.day
		position relative
		flex-grow 1
		display flex
		background-image: repeating-linear-gradient(
			to right, transparent, transparent 2px,
			rgba(black, 0.2) 2px, rgba(black, 0.2) 12.5%
		)
		// TODO: Replace with following gradient when browser support is fixed
		// linear-gradient(
		// 	to right, transparent, transparent 50%,
		// 	white 50%, white calc(50% + 1px),
		// 	transparent calc(50% + 1px), transparent
		// )

	.event
		white-space nowrap
		background-color rgba(127, 127, 127, 0.2)
		overflow hidden
		flex-basis 0
		padding-left 4px
		padding-right 0

		&:not(:last-child)
			background-color rgba(127, 127, 127, 0.2)

		&:hover
			overflow visible

	.empty
		background-color transparent !important
		background-image none !important
