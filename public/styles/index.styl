#events
	padding 1em 0 0 0

	ul
		font-size: 0.75em
		li
			background-color rgba(black, 0.2)
			display flex
			list-style none
			margin-bottom 2px

			div
				line-height 26px
				height 26px
				display inline-block

	.today
		box-shadow 0 0 1px 1px #cd5c5c

	.date
		padding 0 0.5em
		border-right 1px solid rgba(127, 127, 127, 0.2)
		flex-basis auto
		flex-grow 0

	.day
		flex-grow 1
		display flex

	.event
		white-space nowrap
		background-color rgba(127, 127, 127, 0.2)
		overflow hidden
		flex-basis 0
		padding-left 4px
		padding-right 0

		&:not(:last-child)
			background-color rgba(127, 127, 127, 0.2)
			// background-image linear-gradient(
			// 	to left,
			// 	transparent 3px,
			// 	rgba(127, 127, 127, 0.2) 3px
			// )

		&:hover
			overflow visible

	.empty
		background-color transparent !important
		background-image none !important
