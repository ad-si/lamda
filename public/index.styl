#Books
	#library
		padding 2em
		.book
			vertical-align top
			display inline-block
			background-color rgba(127, 127, 127, 0.2)
			padding 1em
			margin 0 1em 1em 0
			width 10em
			min-height 15em
			img
				width 100%
				margin-bottom 1em

	#reader
		position absolute
		width 100%
		height 90%

		#bookContent
			width 80%
			height 80%
			margin 5% auto
			max-width 1250px

		#previous
			left 40px

		#next
			right 40px

		.arrow
			position absolute
			top 50%
			margin-top -32px
			font-size 64px
			color #E2E2E2
			font-family arial, sans-serif
			font-weight bold
			cursor pointer
			user-select none

		.arrow:hover
			color #777

		.arrow:active
			color #000

	object
		display block
		margin 0 auto
		width 80%
		height 60em
