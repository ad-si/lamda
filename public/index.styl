minCoverHeight = 11em

#Books
	padding 2em

	#state
		margin-bottom 1em

	#library
		.book
			vertical-align top
			display inline-block
			margin 0 2em 2em 0
			width 8em
			min-height 12em

			> p
				max-height 8em
				overflow hidden
				font-size 0.9em

		.cover
			position relative
			box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.4)
			margin-bottom 1em

			.description
				font-family serif
				background-color rgb(200, 200, 200)
				padding 1em
				width 100%
				min-height minCoverHeight
				position absolute
				top 0
				left 0
				text-align center

			.author
				font-size 0.8em
				color rgb(100, 100 100)
				padding-bottom 0.8em
				font-style italic

			.title
				color rgb(50, 50 50)
				max-height 8em
				overflow hidden

			img
				width 100%
				min-height minCoverHeight
				margin-bottom -3px
				position relative


	#reader
		position absolute
		width 100%
		height 90%

		#bookContent
			width 80%
			height 80%
			margin 5% auto
			max-width 1250px

		#previous
			left 40px

		#next
			right 40px

		.arrow
			position absolute
			top 50%
			margin-top -32px
			font-size 64px
			color #E2E2E2
			font-family arial, sans-serif
			font-weight bold
			cursor pointer
			user-select none

		.arrow:hover
			color #777

		.arrow:active
			color #000

	object
		display block
		margin 0 auto
		width 80%
		height 60em
