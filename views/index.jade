extends ../../../views/layout

block styles
	link(rel='stylesheet', href='/assets/Projects/public/index.css')

block content
	p Total number of commits: #{numberOfCommits}
	br

	table
		thead
			tr
				th Icon
				th Name
				th Number of commits
				th Language
				th Number of files
		tbody
			each project in projects
				tr
					td.faviconCell
						img.projectFavicon(
						src=project.faviconPath,
						onerror='this.parentNode.removeChild(this)'
						)
					td(title=project.path)= project.name
					td= project.numberOfCommits || ''
					td
					td
