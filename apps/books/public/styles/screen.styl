#books
  padding 2em

  #state
    margin-bottom 1em

  #library
    .book
      vertical-align top
      display inline-block
      margin 0 2em 2em 0
      width 8em
      min-height 12em

      > p
        max-height 8em
        overflow hidden
        font-size 0.9em

    .wasRead
      position absolute
      top -0.5em
      right -0.5em
      background-color mediumseagreen
      border-radius 5em
      color white
      width 2em
      height 2em
      text-align center
      line-height 2em
      text-shadow -0.6px -0.6px 0 rgba(0, 0, 0, 0.4)
      box-shadow 1px 1px 0 rgba(0, 0, 0, 0.4)

    .cover
      position relative
      box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.4)
      margin-bottom 1em
      word-break break-word

      .description
        font-family serif
        background-color rgb(200, 200, 200)
        padding 1em
        width 100%
        position absolute
        top 0
        left 0
        text-align center

      .author
        font-size 0.8em
        color rgb(100, 100 100)
        padding-bottom 0.8em
        font-style italic

      .title
        color rgb(50, 50 50)
        max-height 8em
        overflow hidden

      img
        width 100%
        margin-bottom -3px
        position relative

#reader
  position absolute
  width 100%
  height 90%

  #bookContent
    width 80%
    height 80%
    margin 5% auto
    max-width 1250px

  #previous
    left 40px

  #next
    right 40px

  .arrow
    position absolute
    top 50%
    margin-top -32px
    font-size 64px
    color #E2E2E2
    font-family arial, sans-serif
    font-weight bold
    cursor pointer
    user-select none

  .arrow:hover
    color #777

  .arrow:active
    color #000

#pdf-container
  display block
  margin 0 auto
  width 100%
  height calc(100vh - 2rem)
