@import '../../../_src/helper.styl'
@import './openIconic.styl'
@import './icons.styl'
@import './flags16.styl'


width = 920px
consoleHeight = 10em
color = rgb(100,150,200)
theme = 'dark'
//theme = 'light'

isLinkTextVisible = false

fontSize = 14px

if theme == 'dark'
	fg = gray(255)
	fgMuted = gray(180)
	fgQuiet = gray(100)

	bg = gray(0)
	bgMuted = gray(50)
	bgQuiet = gray(80)

if theme == 'light'
	fg = gray(0)
	fgMuted = gray(50)
	fgQuiet = gray(80)

	bg = gray(255)
	bgMuted = gray(180)
	bgQuiet = gray(100)


getFontSmoothing()
	if theme == 'dark'
		antialiased

getBgImage(iconName, type = 'openIconic')
	if theme == 'dark'
		color = 'white'
	else
		color = 'black'

	background-image url('../' + type + '/png/' + color + '/' + iconName + '-2x.png')
	background-repeat no-repeat
	background-position 50% 50%
	background-size auto 100%


@import '../../../_src/screen.styl'




button
	cursor pointer

.muted
	color rgba(fg, 0.1)


menu
	display inline-block
	width 2em
	height 80%
	background-color gray(0,0.1)
	vertical-align top

.spacer
	padding 2em 0 0 0

.content
	min-height 100%


#navBar
	z-index 1
	width 100%
	height 30px
	line-height 30px
	background-color bg
	position fixed
	top 0

	ul
		list-style-type none
	li
		display inline-block

	#logo
		vertical-align top
		display inline-block
		text-align center
		font-size 20px
		border-right 1px solid fgMuted
		margin-right 1em
		a
			padding 0 1em
			display inline-block
			width 100%
			color fgMuted
			font-smoothing getFontSmoothing()

	.links,
	.right
		vertical-align top
		font-size 12px !important
		display inline-block
		height 30px
		line-height 30px
		a
			display inline-block
			color fgMuted
			margin-right 0.8em
			padding 0 0.8em
			height 100%
			&:hover
				color fg
		.text
			display isLinkTextVisible ? inherit : none
	.right
		float right
		img
			vertical-align -10%
			background-color mediumspringgreen
			height 1.4em
			width 1.4em
			margin-right 0.5em
	.active
		color color !important
	.files
		border-right 1px solid bgQuiet
		margin-right 0.8em
	.oi
		margin-right isLinkTextVisible ? 0.4em : none

