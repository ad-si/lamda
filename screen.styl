@import '../../../_src/helper.styl'
@import './openIconic.styl'

width = 920px
consoleHeight = 10em
color = rgb(100,150,200)
theme = 'dark'
//theme = 'light'

fontSize = 14px

if theme == 'dark'
	fg = gray(255)
	fgMuted = gray(180)

	bg = gray(0)
	bgMuted = gray(50)
	bgLightContrast = gray(80)

if theme == 'light'
	fg = gray(0)
	fgMuted = gray(50)

	bg = gray(255)
	bgMuted = gray(220)
	bgLightContrast = gray(150)


getFontSmoothing()
	if theme == 'dark'
		antialiased

getBgImage(iconName, type = 'openIconic')
	if theme == 'dark'
		color = 'white'
	else
		color = 'black'

	background-image url('../' + type + '/png/' + color + '/' + iconName + '-2x.png')
	background-repeat no-repeat
	background-position 50% 50%
	background-size auto 100%



@import '../../../_src/screen.styl'

.muted
	color rgba(fg, 0.1)


menu
	display: inline-block
	width: 2em
	height: 80%
	background-color: gray(0,0.1)
	vertical-align: top

.content
	min-height 100%
	padding 3em 1em 1em 1em


#contacts
	table
		text-align left
		width 100%
		font-size 11px

		tr:nth-of-type(2n)
			background-color rgba(bg, 0.1)
		thead
			color: fg
		th, td
			padding 0.2em 0.5em
		a
			display inline-block
	.email
		text-align center
		a
			display inline-block
			width 2em
			height 100%
			text-indent -9999px
			getBgImage('envelope-closed')
	// Not very helpful right now
	/*.birthday
		white-space nowrap
		text-indent -9999px
		getBgImage('birthday-cake', 'ucanicon')*/


#files
	.content
		display flex
		flex-direction row
		//align-items stretch
		padding 2em 0 0 0

	#columns
		> div
			flex 1 1 auto
			overflow scroll
			border-right 1px solid bgLightContrast
			padding 1em 0 1em 1em
			ul
				list-style none
				line-height 1.5
			li
				padding-left 0.2em
				span
					display inline-block
					getBgImage('folder')
					width 0.8em
					height 0.8em
					margin-right 0.4em
				&.active
					background-color rgba(fg, 0.1)

		div:first-of-type
			flex-basis 200px
		div:last-of-type
			border-right none

#navBar
	z-index 1
	width 100%
	height 2em
	background-color bg
	position fixed
	top 0

	.links,
	.right
		display inline-block
		vertical-align middle
		font-size 12px
		a
			//background-color gray(255, 0.2)
			color fgMuted
			margin-right 0.8em
			padding 0.1em 0.4em
			&:hover
				color fg
		.oi
			margin-right 0.4em
	.right
		position: absolute
		right: 1em
		top: 25%
	.active
		color color !important
	.files
		border-right 1px solid fgMuted
		padding-right 1.4em !important

	// Icons

	.eventsIcon:before
		content '\e02a'
	.filesIcon:before
		content: '\e084'
	.contactsIcon:before
		content '\e0a1'
	.tasksIcon:before
		content '\e0c4'
	.thingsIcon:before
		content '\e02b'
	.settingsIcon:before
		content '\e0d5'

