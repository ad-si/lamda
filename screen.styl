#logo
	display inline-block
	text-align center
	font-size 1.5em
	line-height (fontSize * 2)
	vertical-align middle
	border-right 1px solid fgMuted
	margin-right 1em
	a
		padding 0 1em
		display inline-block
		width 100%
		height 100%
		color fgMuted
		font-smoothing getFontSmoothing()

#console
	display none
	position fixed
	bottom 0
	width 100%
	height consoleHeight
	font-family Consolas, monospace
	textarea
		background-color bg
		color fg
		padding 0.5em
		width 100%
		height 100%
		resize none
		outline none

#tasks
	.content
		display flex
		align-items stretch
		padding 2em 0 0 0
	ul
		list-style-type none
	aside
		flex-basis 200px
		border-right 1px solid bgLightContrast
		li
			border-bottom 1px solid bgLightContrast
			padding 0.4em 0.8em
			cursor pointer
	article
		flex 1
		padding 2em
		li
			border 1px solid bgLightContrast
			background-color bgMuted
			color fgMuted
			margin-bottom 0.5em
			padding 0.5em 1em
			border-radius 4px

#events
	ul
		li
			display block
			list-style none
			background-color rgba(bg, 0.2)
			margin-bottom 2px
			div
				line-height 26px
				height 26px
				display inline-block
	.today
		box-shadow 0 0 1px 1px #cd5c5c
	.date
		min-width 80px
		width 10%
		padding 0 0.5em
		vertical-align middle
		border-right 1px solid fgMuted
	.day
		width 90%
		position relative
		vertical-align middle
	.event
		position absolute
		background-color bgLightContrast
		padding 0 0.5em
		margin-right 1px
		overflow hidden
		box-shadow 2px 0 2px -1px bg

#things
	.content
		> div
			vertical-align top
			display inline-block
			background-color bgLightContrast
			padding 1em
			margin 0 1em 1em 0
			width 120px
		img
			width 100%
			margin-bottom 1em

