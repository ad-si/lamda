@import './openIconic.styl'
@import './icons.styl'
@import './flags16.styl'


width = 920px
consoleHeight = 10em
navBarHeight = 30px
color = rgb(100,150,200)

isLinkTextVisible = false

fontSize = 14px


*
	margin 0
	padding 0
	font-size 100%
	box-sizing border-box
	-webkit-box-sizing border-box
	border none

html
	height 100%
	position relative

body
	height 100%
	font-size fontSize
	font-family "Helvetica", sans-serif
	font-weight 100
	color fgMuted
	background-color bgMuted

table
	width 100%
	border-collapse collapse
	tr
		width 100%
	th
	td
		text-align left
		padding 0.2em 0.4em
	th
		text-align center
		padding 0.4em 1em

table, th, td
	border 1px solid fgQuiet


.hidden
	display none

a
	cursor pointer
	transition color 0.1s ease-in-out
	color rgb(100,150,200)
	text-decoration none
	&:hover
		color rgb(50,100,200)

button,
.button
	cursor pointer
	outline none
	padding 0.4em 0.8em
	border-radius 0.2em
	margin-right 1em
	margin-bottom 1em
	background-color fgQuiet
	display inline-block
	color fgMuted
	&:hover
		color fgMuted

hr
	height 1px
	background-color fgQuiet
	margin-bottom 1em

.muted
	color rgba(fg, 0.1)


.small
	font-size: 0.85em

menu
	display inline-block
	width 2em
	height 80%
	background-color gray(0,0.1)
	vertical-align top

.spacer
	padding navBarHeight 0 0 0


.content
	min-height 100%


#navBar
	z-index 1
	width 100%
	line-height 30px
	background-color rgba(bg, 0.8)
	position fixed
	top 0

	ul
		display inline-block
		list-style-type none
	li
		display inline-block

	#logo
		vertical-align top
		display inline-block
		text-align center
		font-size 20px
		border-right 1px solid fgMuted
		margin-right 1em
		a
			padding 0 1em
			display inline-block
			width 100%
			color fgMuted
			font-smoothing getFontSmoothing()

	.links,
	.right
		vertical-align top
		font-size 12px !important
		display inline-block
		height 30px
		line-height 30px
		a
			display inline-block
			color fgMuted
			margin-right 0.8em
			padding 0 0.8em
			height 100%
			&:hover
				color fg
		.text
			display isLinkTextVisible ? inherit : none
	.right
		float right
		img
			vertical-align -10%
			background-color mediumspringgreen
			height 1.4em
			width 1.4em
			margin-right 0.5em
	.active
		color color !important
	.files
		border-right 1px solid bgQuiet
		margin-right 0.8em
	.oi
		margin-right isLinkTextVisible ? 0.4em : none

	// TODO: Move icons into their own apps
	.eventsIcon:before
		calendarIcon()
	.filesIcon:before
		listIcon()
	.contactsIcon:before
		personIcon()
	.tasksIcon:before
		checkMarkIcon()
	.photosIcon:before
		pictureIcon()
	.musicIcon:before
		headphonesIcon()
	.moviesIcon:before
		eyeIcon()
	.booksIcon:before
		bookIcon()
	.docsIcon:before
		textIcon()
	.thingsIcon:before
		slrIcon()
	.projectsIcon:before
		ganttIcon()
	.settingsIcon:before
		wrenchIcon()
	.newsIcon:before
		newsIcon()
	.sheetmusicIcon:before
		sheetmusicIcon()
	.moviesIcon:before
		moviesIcon()

	// Can't change color of image
