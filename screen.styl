@import '../../../_src/helper.styl'
@import './openIconic.styl'

width = 920px
consoleHeight = 10em
color = rgb(100,150,200)
theme = 'dark'
//theme = 'light'

isLinkTextVisible = false

fontSize = 14px

if theme == 'dark'
	fg = gray(255)
	fgMuted = gray(180)
	fgLittleContrast = gray(150)

	bg = gray(0)
	bgMuted = gray(50)
	bgLightContrast = gray(80)

if theme == 'light'
	fg = gray(0)
	fgMuted = gray(50)

	bg = gray(255)
	bgMuted = gray(220)
	bgLightContrast = gray(150)


getFontSmoothing()
	if theme == 'dark'
		antialiased

getBgImage(iconName, type = 'openIconic')
	if theme == 'dark'
		color = 'white'
	else
		color = 'black'

	background-image url('../' + type + '/png/' + color + '/' + iconName + '-2x.png')
	background-repeat no-repeat
	background-position 50% 50%
	background-size auto 100%


@import '../../../_src/screen.styl'




button
	cursor pointer

.muted
	color rgba(fg, 0.1)


menu
	display inline-block
	width 2em
	height 80%
	background-color gray(0,0.1)
	vertical-align top

.spacer
	padding 2em 0 0 0

.content
	min-height 100%


#navBar
	z-index 1
	width 100%
	height 2em
	background-color bg
	position fixed
	top 0

	.links,
	.right
		display inline-block
		vertical-align middle
		font-size 12px
		a
			//background-color gray(255, 0.2)
			color fgMuted
			margin-right 0.8em
			padding 0.1em 0.4em
			&:hover
				color fg
		.oi
			margin-right 0.4em
		.text
			display isLinkTextVisible ? inherit : none
	.right
		position: absolute
		right: 1em
		top: 25%
	.active
		color color !important
	.files
		border-right 1px solid fgMuted
		padding-right 1.4em !important

	// Icons

	.eventsIcon:before
		content '\e02a'
	.filesIcon:before
		content: '\e084'
	.contactsIcon:before
		content '\e0a1'
	.tasksIcon:before
		content '\e0c4'
	.settingsIcon:before
		content '\e0d5'
	.picturesIcon:before
		content '\e075'
	.musicIcon:before
		content '\e072'
	.moviesIcon:before
		content '\e062'
	.booksIcon:before
		content '\e020'
	.docsIcon:before
		content '\e047'
	.thingsIcon:before
		content '\e02b'
	.projectsIcon:before
		content '\e0a9'

