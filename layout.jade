!!!5

html
	head
		title= title
		link(rel='stylesheet', href='/styles/screen.css')
		link(rel='icon', href='/img/favicon.png', type='image/png')

	body(id=page)
		nav#navBar
			h1#logo
				a(href='/') Î»
			.links
				// TODO: 'Things', 'Calendar', 'Sheetmusic', 'Music', 'Movies', 'Documents'
				each name in ['Explorer', 'Contacts', 'Tasks']
					- var path = '/' + name.toLowerCase()
					- var className = name + ' ' + (page === name.toLowerCase() ? 'active' : '')
					a(href=path, class=className)= name

			.right
				a.settings(href='/settings') Settings

		block content

	each link in scripts
		script(src=link)

	block scripts
