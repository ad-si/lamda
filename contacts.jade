extends layout

block content
	div.content
		table
			thead
				tr
					// Print available keys in a sorted order
					each key in sortedKeys
						if availableKeys.indexOf(key) !== -1
							td= key.toUpperCase()
			tbody
				each contact in contacts
					tr
						each key in sortedKeys
							if Object.keys(contact).indexOf(key) !== -1
								td(class = key)
									if key === 'website'
										// TODO: Take care of https
										a(href=contact[key])= contact[key] ? contact[key].substring(7) : ''

									else if key === 'facebook'
										// TODO: Take care of https
										a(href='https://facebook.com/' + contact[key])= contact[key]

									else if key === 'email'
										a(href='mailto:' + contact[key]) &#x1f4e7
										//contact[key]

									else if key === 'birthday'
										=contact[key].toISOString().substr(0,10)

									else
										=contact[key]
							else
								td
	include partials/console
